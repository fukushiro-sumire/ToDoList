<h1>タスク一覧</h1>
<p id="notice"><%= notice %></p>

 <%= form_tag(:action=>"search") do %>  
<%= collection_select 'search', 'user' ,User.all, :userid, :username, {selected: @search_user,include_blank: "全員"}%>  
 <%= collection_select 'search', 'category' ,Category.all, :id, :categoryname, {selected: @search_category,include_blank: "全カテゴリー"}%>  
  <%= text_field_tag "search[name]",@search_value %>  
   <%= submit_tag "検索" %>  
   <%= link_to "リセット", tasks_path %>  
 <% end %>  

<table>
  <thead>
    <tr>
      <th>チェック</th>
      <th>日付</th>
      <th>カテゴリー</th>
      <th>内容</th>
      <th>ユーザー</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.dane %></td>
        <td><%= task.due_date %></td>
        <td><%= task.category_id %></td>
        <td><%= task.name %></td>
        <td><%= task.user_id%></td>
        <td><%= link_to '詳細', task %></td>
        <td><%= link_to '変更', edit_task_path(task) %></td>
        <td><%= link_to '削除', task, method: :delete, data: { confirm: '削除しますか?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'タスク登録', new_task_path %>


